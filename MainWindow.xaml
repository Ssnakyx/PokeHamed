<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pokemon Like" Height="400" Width="600">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="20">
            <TextBlock Text="Lien de la base de données" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBox Name="DatabaseLinkTextBox" Width="300" Height="30" Margin="0,0,0,10" />
            <Button Content="Sign Up" Width="200" Height="40" Margin="0,10,0,0" Click="SignUpButton_Click" />
            <Button Content="Login" Width="200" Height="40" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
