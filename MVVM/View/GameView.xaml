<Window x:Class="WpfApp1.MVVM.View.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.MVVM.View"
      xmlns:View="clr-namespace:WpfApp1.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="GameView"
      WindowStartupLocation="CenterScreen"
      ResizeMode="NoResize"
      Background="#1E1E1E">

    <Grid>
        <TabControl FontSize="14" FontWeight="Bold" Margin="10" Foreground="White" Background="#2A2A2A">
            <!-- Onglet Monstres -->
            <TabItem Header="Monstres" Padding="5" Background="#2A9D8F">
                <Grid>
                    <View:MonstresView/>
                </Grid>
            </TabItem>

            <!-- Onglet Spells -->
            <TabItem Header="Spells" Padding="5" Background="#E63946">
                <Grid>
                    <View:SpellsView/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
