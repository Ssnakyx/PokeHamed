<Window x:Class="WpfApp1.CreateAccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un compte" Height="400" Width="600">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <!-- Partie pour créer un compte -->
            <TextBlock Text="Créer un compte" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />

            <!-- TextBox pour le nom d'utilisateur -->
            <TextBox x:Name="CreateUsernameTextBox" Width="300" Height="30" Margin="0,10" 
                     VerticalContentAlignment="Center" />

            <!-- PasswordBox pour le mot de passe -->
            <PasswordBox x:Name="CreatePasswordBox" Width="300" Height="30" Margin="0,10" />

            <!-- Bouton pour créer un compte -->
            <Button Content="Créer un compte" Width="200" Height="40" Margin="0,20" Click="CreateAccountButton_Click" />
        </StackPanel>
    </Grid>
</Window>
