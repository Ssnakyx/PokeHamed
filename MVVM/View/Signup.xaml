<Window x:Class="PokemonLike.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="300" Width="400">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Spacing="20">
            <TextBox Name="UsernameTextBox" Width="250" Height="30" Margin="0,0,0,10" PlaceholderText="Username" />
            <PasswordBox Name="PasswordBox" Width="250" Height="30" Margin="0,0,0,10" />
            <Button Content="Sign Up" Width="250" Height="40" Click="SignUpButton_Click" />
            <Button Content="Back to Main" Width="250" Height="40" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>
